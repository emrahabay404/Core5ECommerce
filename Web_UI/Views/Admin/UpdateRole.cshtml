@using Entities.Concrete;
@model RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Update Role Form</h1>

<form method="post">
    <div class="form-group">
        <label class="label">Role ID</label>
        <input type="text" value="@Model.Id" name="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label class="label">Role Başlık</label>
        <input type="text" value="@Model.Name" name="Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>